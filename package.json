{
  "name": "bus-tracking-system",
  "version": "1.0.0",
  "description": "Real-Time Bus Tracking System - Frontend and Backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd \"Web API\" && npm run dev",
    "dev:frontend": "cd client && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd \"Web API\" && npm run build",
    "build:frontend": "cd client && npm run build",
    "start": "cd \"Web API\" && npm start",
    "install:all": "npm install && cd \"Web API\" && npm install && cd ../client && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd \"Web API\" && npm test",
    "test:frontend": "cd client && npm run lint",
    "seed": "cd \"Web API\" && npm run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "Web API",
    "client"
  ]
}
